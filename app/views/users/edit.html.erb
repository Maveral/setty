<h1><%= t(:user_edit) %></h1>
<%= javascript_tag do %>
  window.avatar_number = <%= @user.avatar %>;
<% end %>
<%= render "layouts/form_errors", :object => @user %>
<div class="news-center">
  <h2>Zmiana hasÅ‚a</h2>
  <hr class="news">
<%= form_for(@user) do |f| %>
  <div class="inline">
    <%= f.label :password %><br />
    <%= f.password_field :password, :value => @user.password %>
  </div>
  <div class="inline">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, :value => @user.password_confirmation %>
  </div>
  <div>
    <%= f.submit t(:edit) %>
  </div>
<% end %>
</div>
<div class="news-center">
  <h2>Zmiana danych</h2>
  <hr class="news">
<%= form_for(@user) do |f| %>
  <div>
  <%= t(:avatar) %>
    <%= f.hidden_field :avatar, :value => @user.avatar.nil? ? 1 : @user.avatar, :id => "avatar_field" %>
  </div>
  <%= link_to "&lArr;".html_safe, "#/", :id => "prev" %>
  <div id="obrazek">
  </div>
  <%= link_to "&rArr;".html_safe, "#/", :id => "next" %>
  <br />
  <div class="inline">
    <%= f.label :nick %><br />
    <%= f.text_field :nick %>
  </div>
  <div class="inline">
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </div>
  <div class="inline">
    <%= f.label :age %><br />
    <%= f.number_field :age %>
  </div>
  <% if userlogged && userlogged.admin? %>
  <div>
    <%= f.label :role %><br />
    <%= f.select :role, User.getRole %>
  </div>
  <% end %>
  <div>
    <%= f.label :about %><br />
    <%= f.text_area :about, :class => "tinymce" %>
    <%= tinymce %>
  </div>
  <div>
    <%= f.submit t(:edit) %>
  </div>
<% end %>
</div>
